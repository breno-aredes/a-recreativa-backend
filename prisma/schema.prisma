// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Plan {
  id          Int     @id @default(autoincrement())
  title       String
  subject     String
  grade       String
  duration    String
  objectives  String
  activities  String
  resources   String
  evaluation  String
  homework    String?
  notes       String?
  filePath    String? 
}